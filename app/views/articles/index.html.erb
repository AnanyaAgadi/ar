<h1>Articles</h1>
 
    <% @articles.each do |article| %>
      
        <h3><%= link_to article.title, article_path(article) %></h3>
        <p>By : <%= article.author %>, created at: <%= article.created_at%></p>
        <p><%= article.description %></p>
        
      
    <% end %>


